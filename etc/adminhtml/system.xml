                <!-- Badge Config-->

                <field id="badge_config" translate="label" type="text" >
                    <label>Chat Badge</label>
                    <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                    <sort_order>70</sort_order>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </field>
                
                <button_hide_offline translate="label comment">
                    <label>Hide Chat button if Offline</label>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>71</sort_order>
                    <comment>Configure whether the chat button is displayed when the account is offline.</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </button_hide_offline>
                <badge_show translate="label comment">
                    <label>Show Badge</label>
                    <frontend_type>select</frontend_type>
                    <source_model>chat/config_source_showhide</source_model>
                    <comment>Show or hide the badge when the widget is loaded.</comment>
                    <sort_order>80</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                        <button_hide_offline>0</button_hide_offline>
                    </depends>
                </badge_show>
                <badge_layout translate="label comment">
                    <label>Layout</label>
                    <frontend_type>select</frontend_type>
                    <source_model>chat/config_source_layout</source_model>
                    <comment>Image right (Image on right, text on left), Image left (Image on left, text on right), Image only, Text only</comment>
                    <tooltip><![CDATA[<img src="data:image/png;base64,">
]]></tooltip>
                    <sort_order>90</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </badge_layout>
                <theme_badge_color_primary translate="label">
                    <label>Badge Color</label>
                    <frontend_type>select</frontend_type>
                    <source_model>chat/config_source_badgecolor</source_model>
                    <sort_order>95</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </theme_badge_color_primary>
                <theme_badge_color translate="label comment">
                    <label>Customized Badge Color</label>
                    <frontend_type>text</frontend_type>
                    <validate>color</validate>
                    <sort_order>96</sort_order>
                    <comment><![CDATA[Color in hexadecimal format ('AABBCCâ)]]></comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                        <theme_badge_color_primary>badge_color_customized</theme_badge_color_primary>
                    </depends>
                </theme_badge_color>
                <badge_image translate="label comment">
                    <label>Image</label>
                    <frontend_type>image</frontend_type>
                    <backend_model>adminhtml/system_config_backend_image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">chat</upload_dir>
                    <base_url type="media" scope_info="1">chat</base_url>
                    <sort_order>110</sort_order>
                    <comment>Recommended dimensions 240x164px. No effect if the badge layout is text only</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </badge_image>
                <badge_text translate="label comment">
                    <label>Text</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>120</sort_order>
                    <comment>No effect if the layout of the badge is Image Only</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </badge_text>

                <!-- Concierge Config -->

                <concierge_config translate="label">
                    <label>Chat Concierge</label>
                    <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                    <sort_order>130</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </concierge_config>
                <concierge_name translate="label comment">
                    <label>Display Title</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>140</sort_order>
                    <comment>Customize this name to give the concierge a personality.</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </concierge_name>
                <concierge_title translate="label comment">
                    <label>Byline</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>150</sort_order>
                    <comment>Write a short message to pique your visitors' interest.</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </concierge_title>
                <concierge_avatar translate="label comment">
                    <label>Avatar</label>
                    <frontend_type>image</frontend_type>
                    <backend_model>adminhtml/system_config_backend_image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">chat</upload_dir>
                    <base_url type="media" scope_info="1">chat</base_url>
                    <sort_order>160</sort_order>
                    <comment>Recommended dimensions 50x50px. Set the conciergeâs avatar. Appears in greeting and status messages. Allowed file types: jpeg, gif, png</comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="window_theme">simple</field>
                        <field id="type_config">adv</field>
                    </depends>
                </concierge_avatar>

                <!-- Minimized Chat Button -->

                <message_chat_bar translate="label">
                    <label>Minimized Chat Button</label>
                    <sort_order>200</sort_order>
                    <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </message_chat_bar>
                <online_message translate="label">
                    <label>Online Message</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>210</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </online_message>
                <offline_message translate="label">
                    <label>Offline Message</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>220</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </offline_message>

                <!-- Bubble Config -->

                <bubble_config translate="label">
                    <label>Chat Bubble</label>
                    <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                    <sort_order>400</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                    </depends>
                </bubble_config>
                <theme_bubble_color_primary translate="label">
                    <label>Bubble Color</label>
                    <frontend_type>select</frontend_type>
                    <source_model>chat/config_source_bubblecolor</source_model>
                    <sort_order>403</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                    </depends>
                </theme_bubble_color_primary>
                <theme_bubble_color translate="label comment">
                    <label>Customized Bubble Color</label>
                    <frontend_type>text</frontend_type>
                    <validate>color</validate>
                    <sort_order>405</sort_order>
                    <comment><![CDATA[Color in hexadecimal format (âAABBCCâ)]]></comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                        <theme_bubble_color_primary>bubble_color_customized</theme_bubble_color_primary>
                    </depends>
                </theme_bubble_color>
                <bubble_show translate="label comment">
                    <label>Show the Bubble</label>
                    <frontend_type>select</frontend_type>
                    <source_model>chat/config_source_showhide</source_model>
                    <sort_order>410</sort_order>
                    <comment><![CDATA[Show: If the user hides or has hidden the chat bubble, it will remain hidden on subsequent page loads until the current session expires, or the reset API function is called.]]></comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                    </depends>
                </bubble_show>
                <bubble_title translate="label">
                    <label>Title</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>420</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                    </depends>
                </bubble_title>
                <bubble_text translate="label">
                    <label>Text</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>430</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <window_theme>classic</window_theme>
                        <field id="type_config">adv</field>
                    </depends>
                </bubble_text>

                <!-- Cookie Law Config -->

                <cookielaw_config translate="label">
                    <label>Cookie Law Configuration</label>
                    <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </cookielaw_config>
                <cookielaw_comply translate="label comment">
                    <label>Cookie Comply</label>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <comment>Display a notice that cookies are used the first time the visitor opens the chat window. Visitors can choose to allow or disallow cookies from the Options menu only when this function is called.</comment>
                    <sort_order>510</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <field id="type_config">adv</field>
                    </depends>
                </cookielaw_comply>
                <cookielaw_consent translate="label comment">
                    <label>Cookie Implicit Consent</label>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <comment>Disable the live chat widget and do not store cookies until the visitor explicitly allows the use of cookies.</comment>
                    <sort_order>520</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <depends>
                        <cookielaw_comply>1</cookielaw_comply>
                        <field id="type_config">adv</field>
                    </depends>
                </cookielaw_consent>
            </group>
        </section>
    </system>
</config>
